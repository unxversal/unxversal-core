{
  "include": ["./src/**/*"],
  "exclude": ["tests/**/*", "lib", "node_modules", "scripts"],
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    // strict
    "strict": false,
    "noImplicitAny": false
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}
